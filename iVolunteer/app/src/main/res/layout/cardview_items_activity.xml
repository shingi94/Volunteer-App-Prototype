<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_cardview_id"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="3dp"
    app:cardBackgroundColor="@color/white"
    android:background="@color/white"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_margin="5dp">
<!--// android:layout_margin="5dp"-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <ImageView
                android:id="@+id/activity_img_id"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:background="#2d2d2d"
                android:transitionName="sharedImage"
                android:layout_marginBottom="24dp"/>


            <TextView
                android:id="@+id/activity_name_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="Activity Name"
                android:textColor="#2d2d2d"
                android:textSize="24sp"
                android:padding="0dp"
                android:layout_marginBottom="8dp"/>


        <!--</LinearLayout>-->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/location_icon_id"
                android:src="@drawable/map_marker"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/activity_location_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Activity Location"
                android:textColor="#2d2d2d"
                android:textSize="14dp"
                android:layout_marginLeft="8dp"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">

            <ImageView
                android:id="@+id/activity_dateTime_img_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_event_24dp" />
            <TextView
                android:id="@+id/activity_dateTime_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Activity time"
                android:textColor="@color/lightgray"
                android:layout_marginLeft="8dp"
                android:layout_gravity="center_vertical"/>


        </LinearLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            >

            <TextView
                android:id="@+id/activity_description_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/randomText"
                android:paddingRight="24dp"
                android:textColor="#2d2d2d"/>

            <ImageView
                android:id="@+id/activity_more_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_more_vert_24dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:padding="4dp"
                />

        </android.support.constraint.ConstraintLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="By: Richard Zarf"
            android:textColor="@color/lightgray"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:id="@+id/activity_Volunteam_names_id"/>

    </LinearLayout>


</android.support.v7.widget.CardView>